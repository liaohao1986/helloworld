		<jdbc:script location="classpath*:sql/project_instance.sql" /> <jdbc:script location="classpath*:sql/miles_info.sql" /> </jdbc:embedded-database> -->

	<!-- <bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource"> <property name="driverClassName" value="org.h2.Driver" /> <property name="url" value="jdbc:h2:mem:booking;MODE=MYSQL;DB_CLOSE_DELAY=-1" 
		/> <property name="username" value="sa" /> <property name="password" value="" /> </bean> -->
	<bean id="dataSource" class="com.alibaba.druid.pool.DruidDataSource">
		<property name="driverClassName" value="org.h2.Driver" />
		<property name="url" value="jdbc:h2:mem:booking;MODE=MYSQL;DB_CLOSE_DELAY=-1" />
		<property name="username" value="sa" />
		<property name="password" value="" />
		<!-- 配置监控统计拦截的filters -->
		<property name="filters" value="stat,slf4j" />
	</bean>

	<jdbc:initialize-database data-source="dataSource">
		<jdbc:script location="classpath*:sql/register_channel.sql" />
		<jdbc:script location="classpath*:sql/register_mail_channel.sql" />
		<jdbc:script location="classpath*:sql/register_mail.sql" />
	</jdbc:initialize-database>

</beans>
